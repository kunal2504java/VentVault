# ===========================================
# VentVault Backend Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# LLM Provider Configuration
# -------------------------------------------
# Choose your LLM provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here
LLM_MODEL_OPENAI=gpt-4o-mini

# Anthropic Configuration (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
LLM_MODEL_ANTHROPIC=claude-3-haiku-20240307

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
# Local Redis
REDIS_URL=redis://localhost:6379

# Upstash Redis (cloud)
# REDIS_URL=rediss://default:your-password@your-endpoint.upstash.io:6379

# Connection pool settings
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5.0

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
# Vents per day by user tier
ANON_DAILY_LIMIT=2
SIGNED_IN_DAILY_LIMIT=10
PREMIUM_DAILY_LIMIT=100

# -------------------------------------------
# Environment
# -------------------------------------------
# Options: development, staging, production
ENVIRONMENT=development

# Enable debug mode (shows detailed errors)
DEBUG=false

# -------------------------------------------
# Performance Tuning
# -------------------------------------------
# Maximum tokens in LLM response
MAX_OUTPUT_TOKENS=120

# LLM temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.6

# LLM request timeout in seconds
LLM_TIMEOUT=10.0

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
# Comma-separated list of allowed origins
# CORS_ORIGINS=["http://localhost:3000","https://ventvault.com"]

# -------------------------------------------
# Logging
# -------------------------------------------
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# -------------------------------------------
# Future: Database (Phase 2)
# -------------------------------------------
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/ventvault

# -------------------------------------------
# Future: Auth (Phase 3)
# -------------------------------------------
# JWT_SECRET_KEY=your-super-secret-key
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24
