# ===========================================
# VentVault Backend Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# LLM Provider Configuration
# -------------------------------------------
# Choose your LLM provider: "openai", "anthropic", or "google"
LLM_PROVIDER=google

# Google Gemini Configuration (RECOMMENDED - Fast & Free tier available)
GOOGLE_API_KEY=your-google-api-key-here
LLM_MODEL_GOOGLE=gemini-2.5-flash-preview-05-20

# OpenAI Configuration (alternative)
OPENAI_API_KEY=sk-your-openai-key-here
LLM_MODEL_OPENAI=gpt-4o-mini

# Anthropic Configuration (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
LLM_MODEL_ANTHROPIC=claude-3-haiku-20240307

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
# Local Redis
REDIS_URL=redis://localhost:6379

# Upstash Redis (cloud)
# REDIS_URL=rediss://default:your-password@your-endpoint.upstash.io:6379

# Connection pool settings
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5.0

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
# Vents per day by user tier
ANON_DAILY_LIMIT=10
SIGNED_IN_DAILY_LIMIT=25
PREMIUM_DAILY_LIMIT=100

# -------------------------------------------
# Environment
# -------------------------------------------
# Options: development, staging, production
ENVIRONMENT=development

# Enable debug mode (shows detailed errors)
DEBUG=false

# -------------------------------------------
# Performance Tuning
# -------------------------------------------
# Maximum tokens in LLM response (increased for natural conversation)
MAX_OUTPUT_TOKENS=2048

# LLM temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.7

# LLM request timeout in seconds
LLM_TIMEOUT=30.0

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
# Comma-separated list of allowed origins
# CORS_ORIGINS=["http://localhost:3000","https://ventvault.com"]

# -------------------------------------------
# Logging
# -------------------------------------------
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ventvault
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# -------------------------------------------
# Future: Auth (Phase 3)
# -------------------------------------------
# Clerk Authentication
# Get these from https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_your-key-here
CLERK_SECRET_KEY=sk_test_your-key-here
CLERK_FRONTEND_API=https://your-instance.clerk.accounts.dev
